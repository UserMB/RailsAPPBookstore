<%= stylesheet_link_tag 'application' %>

<h2>change</h2>
<p> <b>First Name:</b> <%=h @person.first_name %> </p>
<p> <b>Last Name:</b> <%=h @person.last_name %> </p>
<p> <b>Book:</b> <%=h @person.book_name %> </p>
<p> <b>Quantity:</b> <%=h @person.book_quantity%> </p>
<p> <b>Your ID:</b> <%=h @person.id %> </p>

<p> So, <%= h @fname.capitalize %>, would you like your book order: </p>
<%= form_tag('change', :method => 'get') do %>
    <p> Book:
      <%= text_field_tag 'book', @book_name %>
    <p> Quantity:
      <%= text_field_tag 'quantity', @book_quantity %>
      <%= submit_tag 'send' %>
<% end %>


<% if @entry.book_quantity then %>
    <p> Please
      <%= link_to 'Check for stock', :controller => "sign_up", :action => "show"  %>
<% end %>
